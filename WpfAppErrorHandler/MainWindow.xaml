<Window x:Class="WpfAppErrorHandler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppErrorHandler"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Send" HorizontalAlignment="Left" 
                Height="33" Margin="115,167,0,0" VerticalAlignment="Top" 
                Width="85" Background="#FF1979D2" Opacity="0.9" 
                Foreground="#FFEFE8E8" Click="Button_Click"/>

        <TextBox x:Name="MyTextBox" HorizontalAlignment="Left" Height="30" Margin="224,170,0,0"
         TextWrapping="Wrap" VerticalAlignment="Top" Width="318"
         SelectionBrush="#FF06080A" Background="#FFDADADA"
         BorderBrush="#FF03050C"
         TextChanged="MyTextBox_TextChanged"/>



        <Label x:Name="Label_Results" Content="" 
                  HorizontalAlignment="Left" Margin="224,227,0,0" 
                  VerticalAlignment="Top" Foreground="#FF2D2D2D" Width="318"/>
        <TextBlock HorizontalAlignment="Left" Margin="224,132,0,0" TextWrapping="Wrap" Text="Write an integer/integers and see the average of the number in this case" VerticalAlignment="Top" Height="42" Width="318"/>


    </Grid>
</Window>
